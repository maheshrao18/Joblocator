<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/namealign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/name"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/compnyname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rolealign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/namealign"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/jobrole"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/jobrole"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/expealign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rolealign"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="@string/experience"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/experience"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:textSize="20sp"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_alignParentRight="true"
                android:src="@drawable/download" />
        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>